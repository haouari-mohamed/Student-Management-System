<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Define the StudentServiceImpl bean -->
    <bean id="studentService" class="com.panchalprogrammingacademy.service.StudentServiceImpl" />

    <!-- Define the StudentController bean -->
    <bean id="studentController" class="com.panchalprogrammingacademy.controller.StudentController">
        <property name="studentService" ref="studentService" />
    </bean>

    <!-- View resolver configuration for resolving JSP views -->
    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/" />
        <property name="suffix" value=".jsp" />
    </bean>

</beans>